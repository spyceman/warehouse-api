// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@postgres:5432/inspector?schema=public"
}

model User {
  id                   Int                    @id @default(autoincrement())
  email                String                 @unique
  encrypted_password   String
  organization_id      Int                    
  created_at           DateTime
  created_by           String                 @default("")
  updated_at           DateTime
  updated_by           String                 @default("")
  changed_by           String                 @default("")
  role                 Role                   @default(employee)
  organization         Organizations          @relation(fields: [organization_id], references: [id])
  Warehouse_operation1 Warehouse_operations[] @relation("user")
  Warehouse_operation2 Warehouse_operations[] @relation("responsible_user")
}

model Organizations {
  id                   Int                    @id @default(autoincrement())
  name                 String                 @unique
  location_id          Int                    @unique
  created_at           DateTime
  created_by           String                 @default("")
  updated_at           DateTime
  updated_by           String                 @default("")
  changed_by           String                 @default("")
  User                 User[]  
  Price_lists          Price_lists[]
  Warehouses           Warehouses[]
  Warehouse_operations Warehouse_operations[]
}

model Price_lists {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  description         String
  service_location_id Int
  created_at          DateTime
  created_by          String                @default("")
  updated_at          DateTime
  updated_by          String                @default("")
  changed_by          String                @default("")
  organization        Organizations         @relation(fields: [service_location_id], references: [location_id])
  Price_list_items    Price_list_items[]
  Price_list_settings Price_list_settings[]
  Warehouses          Warehouses[]
}

model Price_list_items {
  id                        Int                         @id @default(autoincrement())
  price_list_id             Int
  price                     Float
  created_at                DateTime
  created_by                String                      @default("")
  updated_at                DateTime
  updated_by                String                      @default("")
  changed_by                String                      @default("")
  price_list                Price_lists                 @relation(fields: [price_list_id], references: [id])
  Warehouse_products        Warehouse_products[]
  Warehouse_operation_items Warehouse_operation_items[]
}

model Price_list_settings {
  id            Int         @id @default(autoincrement())
  price_list_id Int
  permission    Permission  @default(everybody)
  created_at    DateTime
  created_by    String      @default("")
  updated_at    DateTime
  updated_by    String      @default("")
  changed_by    String      @default("")
  price_list    Price_lists @relation(fields: [price_list_id], references: [id])
}

model Warehouse_products {
  id           Int              @id @default(autoincrement())
  product_id   Int              @unique
  count        Float
  warehouse_id Int
  created_at   DateTime
  created_by   String           @default("")
  updated_at   DateTime
  updated_by   String           @default("")
  changed_by   String           @default("")
  product      Price_list_items @relation(fields: [product_id], references: [id])
  warehouse    Warehouses       @relation(fields: [warehouse_id], references: [id])
}

model Warehouse_operations {
  id                        Int                         @id @default(autoincrement())
  type                      Type                        @default(sale)
  service_location_id       Int
  date                      DateTime
  document                  String
  comment                   String
  ordinal                   Int
  responsible_user_id       Int
  from_id                   Int
  to_id                     Int
  user_id                   Int
  reservation_id            String
  created_manually          Boolean
  created_at                DateTime
  created_by                String                      @default("")
  updated_at                DateTime
  updated_by                String                      @default("")
  changed_by                String                      @default("")
  user                      User                        @relation("user", fields: [user_id], references: [id])
  responsible_user          User                        @relation("responsible_user", fields: [responsible_user_id], references: [id])
  service                   Organizations               @relation(fields: [service_location_id], references: [location_id])
  from                      Warehouses                  @relation("from", fields: [from_id], references: [id])
  to                        Warehouses                  @relation("to", fields: [to_id], references: [id])
  Warehouse_operation_items Warehouse_operation_items[]
}

model Warehouse_operation_items {
  id                     Int                  @id @default(autoincrement())
  product_id             Int
  count                  Float
  price                  Float
  product_name           String
  warehouse_operation_id Int
  discount               Float
  created_at             DateTime
  created_by             String               @default("")
  updated_at             DateTime
  updated_by             String               @default("")
  changed_by             String               @default("")
  product                Price_list_items     @relation(fields: [product_id], references: [id])
  warehouse_operation    Warehouse_operations @relation(fields: [warehouse_operation_id], references: [id])
}

model Warehouses {
  id                   Int                    @id @default(autoincrement())
  name                 String
  service_location_id  Int
  track_consumables    Boolean
  default_for_arrival  Boolean
  default_for_sale     Boolean
  price_list_id        Int
  created_at           DateTime
  created_by           String                 @default("")
  updated_at           DateTime
  updated_by           String                 @default("")
  changed_by           String                 @default("")
  service              Organizations          @relation(fields: [service_location_id], references: [location_id])
  price_list           Price_lists            @relation(fields: [price_list_id], references: [id])
  Warehouse_products   Warehouse_products[]
  Warehouse_operation1 Warehouse_operations[] @relation("from")
  Warehouse_operation2 Warehouse_operations[] @relation("to")
}

enum Role {
  employee
  admin
  super_admin
}

enum Permission {
  everybody
  nobody
  specific_users
}

enum Type {
  sale
  arrival
  other_arrival
  eternal_transfer
  PurchaseReturn
  OtherExpenditure
}
